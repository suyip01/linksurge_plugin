{
  "manifest_version": 3,
  "name": "Linksurge: Email Finder",
  "version": "1.0.0",
  "description": "通用的邮箱查找Chrome插件",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Linksurge: Email Finder"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}